{
  "include": ["./basics", "./classics"],
  "references": [{ "path": "../packages/void" }],
  "compilerOptions": {
    "paths": { "void": ["../packages/void"] },
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": false,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./out",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  }
}
